{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    ":dependencyDashboard",
    ":semanticPrefixFixDepsChoreOthers",
    ":ignoreModulesAndTests",
    "group:monorepos",
    "group:recommended",
    "mergeConfidence:age-confidence-badges",
    "replacements:all",
    "workarounds:all",
    ":automergeAll"
  ],
  "automerge": true,
  "automergeStrategy": "auto",
  "automergeType": "pr",
  "ignoreTests": true,
  "github-actions": {
    "ignoreTests": true,
    "automerge": true
  }
}